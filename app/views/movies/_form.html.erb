<%= form_with(model: movie, local: true) do |m| %>
    <%= render "shared/errors", object: movie %>

    <%= m.label :title%>
    <%= m.text_field :title, autofocus: true %>

    <%= m.label :description%>
    <%= m.text_area :description, rows: 10 %>

    <%= m.label :director %>
    <%= m.text_field :director %>

    <%= m.label :duration %>
    <%= m.text_field :duration %>

    <%= m.label :main_image %>
    <%= m.file_field :main_image %>

    <%= m.label :rating%>
    <%= m.select :rating, Movie::RATINGS, prompt: "Pick one" %>

    <%= m.label :released_on%>
    <%= m.date_field :released_on %>

    <%= m.label :total_gross%>
    <%= m.number_field :total_gross%>

    <div class="checkboxes">
        <%= m.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %>
    </div>

    <%= m.submit%>
<% end %>